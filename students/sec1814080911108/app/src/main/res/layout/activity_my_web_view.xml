<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".webview.MyWebViewActivity"
    android:orientation="vertical">
    <!-- 顶部地址栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/webIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="favicon"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="13dp"
            android:src="@drawable/internet"
            android:background="#01000000"/>

        <EditText
            android:id="@+id/textUrl"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:background="#00000000"
            android:hint="@string/input_url"
            android:imeOptions="actionGo"
            android:inputType="textUri"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="#606060"
            android:textColorHint="#9f9f9f"/>

        <ImageView
            android:id="@+id/btnStart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="refresh"
            android:padding="13dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/refresh"
            android:background="#01000000"/>

    </LinearLayout>

    <!-- 浏览器容器区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="#d1d1d1">

        <!-- 网页进度条 -->
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:max="100"
            android:progress="50" />
    </FrameLayout>

    <!-- 底部导航栏 -->
    <!-- 底部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!-- 后退按钮 -->
        <RelativeLayout style="@style/NavItem">

            <ImageView
                android:id="@+id/goBack"
                style="@style/NavIcon"
                android:src="@drawable/nav_left" />

        </RelativeLayout>

        <!-- 前进按钮 -->
        <RelativeLayout style="@style/NavItem">

            <ImageView
                android:id="@+id/goForward"
                style="@style/NavIcon"
                android:src="@drawable/nav_right" />

        </RelativeLayout>

        <!-- 主页 -->
        <RelativeLayout style="@style/NavItem">

            <ImageView
                android:text="1"
                android:id="@+id/nav_home"
                style="@style/NavIcon"
                android:src="@drawable/nav_home" />

        </RelativeLayout>

        <RelativeLayout style="@style/NavItem">


            <ImageView
                android:id="@+id/bookmark_collect"
                style="@style/NavIcon"
                android:src="@drawable/bookmark_collect" />

            <TextView
                style="@style/NavIcon"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#555"
                android:textSize="12sp" />

        </RelativeLayout>

        <!-- 主页按钮 -->
        <RelativeLayout style="@style/NavItem">

            <ImageView
                android:id="@+id/nav_menu"
                style="@style/NavIcon"
                android:src="@drawable/nav_menu" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>